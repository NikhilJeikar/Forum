<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:paddingRight="120dp"
    android:paddingLeft="7dp"
    android:clipToPadding="false">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/line1"
            android:background="@drawable/forum_admin_layout"
            tools:ignore="ExtraText">
            <TextView
                android:id="@+id/message_body_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="220dp"
                android:layout_alignParentLeft="true"
                android:elevation="2dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:fontFamily="@font/concert"
                android:text="Placeholder message "
                android:textSize="15dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/message_time_1"
                android:layout_toRightOf="@id/message_body_1"
                android:fontFamily="@font/concert"
                android:singleLine="true"
                android:paddingRight="5dp"
                android:layout_centerVertical="true"
                android:textSize="12dp"
                android:textColor="#000000"
                />

        </RelativeLayout>

    </RelativeLayout>